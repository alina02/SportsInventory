<div class="container">
  <h1 align="center">  Sports Center</h1>
  <div class="box-body">
    <div class="table-responsive ">
      <table border="1" class="table table-bordered table-hover"> 
        <thead> 
          <th> 
            Name of Item
          </th>
          <th> 
            Brand
          </th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Actions</th>
          
        </thead>
          
        <tbody> 
          <% @items.each do |item| %>
            <% item.brands.each do |brand| %>
              <tr>
                <td><%= item.item_name %></td>
                <td><%= brand.brand_name %></td>
                <% price = item.prices.where(brand_id: brand.id).first %>
                <td><%= price ? price.cost : '-' %></td>
                <td><%= price ? price.quantity : '-' %></td>
                <td><%= 'NA' %></td>
              </tr>
            <% end %>
          <% end %>
          
        </tbody>
        
      </table>
    </div>
  </div>
<%= link_to 'Add new item', new_item_path, class: 'btn btn-success' %>
</div>